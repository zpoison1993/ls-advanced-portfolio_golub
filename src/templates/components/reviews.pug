script(type="text/x-template")#reviews-list
    section.reviews
        .container.reviews__container
            .reviews__title
                h2.section-title Что обо мне говорят
                .reviews__slider-controls
                    .reviews__arrows
                        button(type="button" @click="previous()").reviews__btn.reviews__btn--left
                            +icon('arrow-down', 'arrow arrow--left')
                        button(type="button" @click="next()").reviews__btn.reviews__btn--right
                            +icon('arrow-down', 'arrow arrow--right')
            .reviews__slider-wrapper
                flickity(ref="flickity" :options="flickityOptions" v-if="Object.keys(reviews).length > 0").reviews__slider
                    .reviews__slider-item.carousel-cell(v-for="review in reviews" :key="review.id")
                        review(
                            :review="review"
                        )

script(type="text/x-template")#review
    .review__frame
        q.reviews__quote {{review.text}}
        .reviews__author-wrapper
            .reviews__author
                .reviews__author-photoframe
                    img(:src="review.photo", alt="Фотография человека,оставившего отзыв" style="object-fit:cover").reviews__author-img
                    //- +image(`${item.photo}`, 'reviews__author-img', item.name)
                .reviews__bio
                    span.reviews__name {{review.author}}
                    span.reviews__position {{review.occ}}

                    