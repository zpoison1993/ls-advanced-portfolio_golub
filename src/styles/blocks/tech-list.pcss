.tech-list {
    display: flex;
    flex-wrap: wrap;
    color: $text-color;
    font-weight: 600;
    @include tablets() {
        justify-content: center;
    }
}

.tech-list__item {
    margin-right: 2rem;
    margin-bottom: 1rem;
    @include phones() {
        margin-right: 1rem;
    }
    &:last-child{
        margin-right: 0;
    }
}

.tech-item {
   
    background: #f1f5f9;
    border-radius: 20px;
    padding: 15px 20px 15px 20px;
    @include phones() {
        padding: 0.9375rem 1rem;
    }
}