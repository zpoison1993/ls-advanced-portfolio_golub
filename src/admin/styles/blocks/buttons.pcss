.btn--edit-skill-block {
    display: inline-block;
    width: 14px;
    height: 14px;
    background: svg-load(
        "pencil.svg",
        fill=rgba($text-color, 0.5),
        width=100%,
        height=100%
      )
      center center no-repeat;

    transition: all .3s;

    &:hover {
      background: svg-load(
        "pencil.svg",
        fill=rgba($text-color, 1),
        width=100%,
        height=100%
      )
      center center no-repeat;
    }
}

.btn--delete-skill-block {
    display: inline-block;
    width: 14px;
    height: 12px;
    background: svg-load("remove.svg", fill=#bf2929, width=100%, height=100%)
      center center no-repeat;
    transition: transform .2s;

    &:hover {
      transform: scale(1.5);
    }
}

.btn--save-skill-block {
    display: inline-block;
    width: 15px;
    height: 12px;
    background: svg-load("tick.svg", fill=#00d70a, width=100%, height=100%)
      center center no-repeat;
    margin-right: 20px;
    transition: transform .2s;

    &:hover {
      transform: scale(1.5);
    }
}

.btn--edit-skill {
    display: inline-block;
